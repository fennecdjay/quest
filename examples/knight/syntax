expr
	:= primary
	| unary expr
	| binary expr expr
	| ternary expr expr expr

primary
	:= `null`
	| `true` | `false`
	| [a-z_][a-z_0-9]*
	| [0-9]+
	| `'` [^']* `'`

unary
	:= `OUTPUT` | `PROMPT` | `!`

binary
	:= `WHILE` | `;` | `=`
	| `+` | `-` | `*` | `/` | `^` | '%'
	| `<` | `>` | `&` | `|`

ternary
	:= `IF`
